<form class="container position-absolute top-50 start-50 translate-middle" method="post" action="http://localhost:5000/agenda/update">
  <div class="row">
    <input type="hidden" id="id" name="id" value="<%= agenda.id %>" />
    <div class="mb-3">
      <label for="nome" class="col-sm-2 col-form-label">Nome do cliente:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nome" name="nome" value="<%= agenda.nome %>"
          required />
      </div>
    </div>
    <div class="mb-3">
      <label for="tipo_consulta" class="col-sm-2 col-form-label">Tipo de consulta:</label>
      <div class="col-sm-10">
        <input type="tipo_consulta" class="form-control" id="tipo_consulta" name="tipo_consulta" value="<%= agenda.tipo_consulta %>"
          required />
      </div>
    </div>
    <div class="mb-3">
      <label for="formato_consulta" class="col-sm-2 col-form-label">Presencial ou Online:</label>
      <div class="col-sm-10">
        <input type="formato_consulta" class="form-control" id="formato_consulta" name="formato_consulta" value="<%= agenda.formato_consulta %>" required />
      </div>
    </div>
    <div class="mb-3">
      <label for="horario" class="col-sm-2 col-form-label">Hor√°rio:</label>
      <div class="col-sm-10">
        <input type="horario" class="form-control" id="horario" name="horario" value="<%= agenda.horario %>" required />
      </div>
    </div>
    <input type="hidden" id="data_registo" name="data_registo" value="<%= agenda.data_registo %>" />
    <br />
    <div class="mb-3">
      <div class="col-sm-6">
        <button type="submit" class="btn btn-primary">Atualizar agenda</button>
        <button type="reset" class="btn btn-secondary">Limpar</button>
      </div>
    </div>
  </div>
</form>